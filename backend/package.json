{
  "name": "temp-mail-backend",
  "version": "1.0.0",
  "description": "Self-hosted temporary mail system backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push --accept-data-loss --skip-generate"
  },
  "keywords": ["temp-mail", "smtp", "email"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.0",
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mailparser": "^3.6.6",
    "node-cron": "^3.0.3",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/node-cron": "^3.0.11",
    "prisma": "^5.9.0",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0"
  }
}
